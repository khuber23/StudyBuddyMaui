<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NtcMaui.Views.StudySessionFolder.MyStudiesSessionPage"
             Title="MyStudiesSessionPage">
    <ScrollView>
        <Grid>
            <StackLayout Margin="30">

                <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 5">
                    <Button x:Name="MyStudySessionBtn" Clicked="GoToMyStudiesSessionPage"  Margin="5, 5" Text="My Studies"></Button>
                    <Button x:Name="StudyPriorityBtn" Clicked="GoToStudyPriorityPage" Margin="5, 5" Text="Study Priority"></Button>
                </HorizontalStackLayout>

                <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
                    <Button Text="Start Session" Clicked="BeginSession" WidthRequest="150"></Button>
                </StackLayout>

                <!---this will probably need to load all user decks and user deck groups later on that have a user id 
                Matching the id of the logged in user.
                Also will need to make a method again to return a full list of user decks or deck groups to access 
                deck and user at same time. for the mean time i am just going to load the decks until the meeting tuesday-->
                <StackLayout>
                    <ListView x:Name="MyStudiesListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal">
                                        <Image x:Name="ProfileImage"  Source="stockprofileimage.png" WidthRequest="50" HeightRequest="50" VerticalOptions="Start"></Image>
                                        <StackLayout Orientation="Vertical" Margin="10, 5">
                                            <Label FontSize="18" FontAttributes="Bold" VerticalOptions="CenterAndExpand">
                                                <Label.Text>
                                                    <MultiBinding StringFormat="{}{0}-{1} ">
                                                        <Binding Path="DeckGroup.DeckGroupName" />
                                                        <Binding Path="DeckGroup.DeckGroupDeck.Deck.DeckName" />
                                                    </MultiBinding>
                                                </Label.Text>
                                            </Label>
                                            <Label Text="{Binding User.Username}"></Label>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>