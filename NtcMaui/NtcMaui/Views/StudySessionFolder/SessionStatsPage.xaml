<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NtcMaui.Views.StudySessionFolder.SessionStatsPage"
             Title="SessionStatsPage">
    <ScrollView>
        <Grid>
            <StackLayout x:Name="Box" Margin="10" VerticalOptions="Center" WidthRequest="500">
                <Border Stroke="Black" StrokeThickness="2" BackgroundColor="White" Padding="10" VerticalOptions="Center">
                    <StackLayout Margin="10">
                        <Label x:Name="RunTime"></Label>
                        <Label x:Name="TotalCardsText"></Label>
                        <Label x:Name="CorrectFlashcardCount"></Label>
                        <Label x:Name="IncorrectFlashcardCount"></Label>
                    </StackLayout>
                </Border>
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Start">
                <Button Text="Continue" Clicked="GoToStudySession"></Button>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>